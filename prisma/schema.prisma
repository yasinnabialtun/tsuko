
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Decimal  @db.Decimal(10, 2) // Base Price or Default Variant Price
  stock       Int      @default(0)        // Total stock or default variant stock
  images      String[] // Array of image URLs
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  // Platform Features
  attributes  Json?    // Global attributes like { "material": "PLA", "designer": "Tsuko" }
  variants    ProductVariant[]

  // SEO Metadata
  seoTitle       String?
  seoDescription String?
  seoKeywords    String[]

  // Status
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  OrderItem   OrderItem[]
  reviews     Review[]
  notifications StockNotification[]

  @@index([slug])
  @@index([categoryId])
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  sku         String   @unique // Stock Keeping Unit
  title       String   // E.g. "Red / L"
  
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  weight      Float?   // In kg (for shipping calc)
  
  attributes  Json     // { "color": "Red", "size": "L" }
  images      String[] // Variant specific images
  
  isActive    Boolean  @default(true)
  
  OrderItem   OrderItem[]
  
  @@index([productId])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  
  // Hierarchy
  parentId    String?
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")

  products    Product[]
}

model StockNotification {
  id        String   @id @default(cuid())
  email     String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  isNotified Boolean @default(false)
  createdAt DateTime @default(now())

  @@unique([email, productId])
}

model Review {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  rating    Int
  comment   String?
  userName  String
  userId    String?  // Optional Clerk User ID
  
  isApproved Boolean @default(true) // Auto-approve for MVP
  
  createdAt DateTime @default(now())
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique // #TS-1024 format
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String      @default("")
  city            String      @default("")
  trackingNumber  String?
  
  items         OrderItem[]
  totalAmount   Decimal     @db.Decimal(10, 2)
  
  couponCode    String?
  discountAmount Decimal    @default(0) @db.Decimal(10, 2)
  
  status        OrderStatus @default(PENDING)
  paymentStatus PaymentStatus @default(UNPAID)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  
  product   Product @relation(fields: [productId], references: [id])
  productId String
  
  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Price at the time of purchase (snapshot)
}

model UserAddress {
  id          String   @id @default(cuid())
  userId      String   // Clerk User ID
  title       String   // e.g. "Home"
  
  recipientName String
  phone         String
  address       String
  city          String
  district      String
  zipCode       String
  country       String @default("TÃ¼rkiye")
  
  isDefault     Boolean @default(false)
  createdAt     DateTime @default(now())
  
  @@index([userId])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String   @default("website")
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  coverImage  String
  category    String
  author      String   @default("Tsuko Design")
  date        String   // Display date
  
  // SEO
  seoTitle    String?
  seoDesc     String?
  
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

enum OrderStatus {
  PENDING
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUNDED
}

model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  discountType  String   // PERCENTAGE, FIXED
  discountValue Decimal  @db.Decimal(10, 2)
  minAmount     Decimal? @db.Decimal(10, 2)
  startDate     DateTime?
  endDate       DateTime?
  usageLimit    Int?
  usedCount     Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
}
